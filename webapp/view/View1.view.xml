<mvc:View controllerName="com.bankdetails.mybankdetails1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"  displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    class="sapUiSizeCompact">
    <Page id="page" title="{i18n>appTitle}">
            <headerContent>
                <Button id="demoBtn" type="Emphasized" text="{i18n>home}"/>
            </headerContent>
            <content>

                <!-- Bank Details Fragment -->
                <core:Fragment id="bankDetailsfragment"    
                fragmentName ="com.bankdetails.mybankdetails1.view.fragments.BankDetails" type="XML" />
                <!-- Card Details Fragment -->
               <core:Fragment id="cardDetailsfragment"    
                fragmentName ="com.bankdetails.mybankdetails1.view.fragments.CardDetails" type="XML" />
            </content>
        </Page>
</mvc:View>
